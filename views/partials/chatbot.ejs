<!-- ========== PREMIUM AI CONCIERGE ICON ========== -->
<div class="fixed bottom-6 right-6 z-50 group">
    <!-- Pulse Ring Effect -->
    <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-blue-400 opacity-75"></span>

    <!-- Main Floating Button -->
    <button id="openChat"
        class="relative inline-flex items-center justify-center rounded-full bg-gradient-to-tr from-blue-600 to-indigo-600 p-5 shadow-[0_0_25px_rgba(37,99,235,0.6)] transition-all duration-300 hover:scale-110 hover:shadow-blue-500/50">
        <i class="fas fa-robot text-2xl text-white"></i>

        <!-- Online Dot -->
        <span class="absolute top-2 right-2 flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500 border-2 border-white"></span>
        </span>
    </button>
</div>

<div id="chatWindow"
    class="fixed inset-0 md:inset-auto md:bottom-20 md:right-6 w-full md:w-96 h-full md:h-[600px] bg-white md:rounded-2xl shadow-2xl hidden flex-col overflow-hidden z-50 animate-fade-in">
    <!-- Header -->
    <div class="bg-green-700 text-white p-4 flex justify-between items-center shadow-md">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
                <i class="fas fa-robot text-xl"></i>
            </div>
            <div>
                <h3 class="font-bold text-sm">Aura Inn Assistant</h3>
                <p class="text-[10px] text-green-200">Online</p>
            </div>
        </div>
        <button id="closeChat" class="text-2xl hover:text-green-200 transition">&times;</button>
    </div>

    <!-- Messages Area -->
    <div id="messages"
        class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50 bg-[url('https://user-images.githubusercontent.com/15075759/28719144-86dc0f70-73b1-11e7-911d-60d70fcded21.png')] bg-fixed">
        <!-- Initial Bot Message -->
        <div class="bot-bubble">
            नमस्ते! मैं The Aura Inn का AI सहायक हूँ। मैं आपकी कैसे मदद कर सकता हूँ?
            <span class="text-[9px] block text-right mt-1 opacity-70">Just now</span>
        </div>
    </div>

    <!-- Typing Indicator -->
    <div id="typingArea" class="px-4 py-1 hidden">
        <div class="flex gap-1 items-center">
            <div class="typing-dot"></div>
            <div class="typing-dot" style="animation-delay: 0.2s"></div>
            <div class="typing-dot" style="animation-delay: 0.4s"></div>
            <span class="text-[10px] text-gray-500 ml-2">Aura is typing...</span>
        </div>
    </div>

    <!-- Input Area -->
    <div class="p-4 bg-white border-t flex items-center gap-2">
        <div class="flex-1 relative">
            <input id="chatInput" type="text" placeholder="Type a message..."
                class="w-full border rounded-full px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-500 text-sm">
        </div>
        <button id="sendBtn" class="bg-green-600 text-white p-3 rounded-full hover:bg-green-700 transition shadow-md">
            <i class="fas fa-paper-plane"></i>
        </button>
        <button id="voiceBtn" class="bg-gray-200 text-gray-600 p-3 rounded-full hover:bg-gray-300 transition">
            <i class="fas fa-microphone"></i>
        </button>
    </div>
</div>

<style>
    /* Bubble Styles */
    .user-bubble {
        background-color: #E2E8F0;
        /* Gray-200 */
        color: black;
        border-radius: 1rem 1rem 0 1rem;
        max-width: 80%;
        margin-left: auto;
        padding: 0.75rem 1rem;
        position: relative;
        font-size: 0.875rem;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .bot-bubble {
        background-color: #22C55E;
        /* Green-500 */
        color: white;
        border-radius: 0 1rem 1rem 1rem;
        max-width: 80%;
        margin-right: auto;
        padding: 0.75rem 1rem;
        position: relative;
        font-size: 0.875rem;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .typing-dot {
        width: 6px;
        height: 6px;
        background-color: #94A3B8;
        border-radius: 50%;
        animation: bounce 0.8s infinite alternate;
    }

    @keyframes bounce {
        from {
            transform: translateY(0);
        }

        to {
            transform: translateY(-4px);
        }
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.3s ease-out forwards;
    }

    @media (max-width: 768px) {
        #chatWindow {
            width: 100% !important;
            height: 100% !important;
            bottom: 0 !important;
            right: 0 !important;
            border-radius: 0 !important;
        }
    }
</style>