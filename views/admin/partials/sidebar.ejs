<!-- Mobile Toggle Script -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Inject Hamburger Button (CSS handles visibility)
        const topBar = document.querySelector('.top-bar');
        const pageTitle = document.querySelector('.page-title');

        if (topBar && pageTitle && !document.querySelector('.admin-hamburger')) {
            const burger = document.createElement('button');
            burger.className = 'admin-hamburger';
            burger.innerHTML = '<i class="fas fa-bars"></i>';
            burger.onclick = toggleSidebar;

            // Insert before page title
            topBar.insertBefore(burger, pageTitle);
        }

        const sidebar = document.getElementById('adminSidebar');
        const overlay = document.getElementById('sidebarOverlay');
        const closeBtn = document.getElementById('sidebarCloseBtn');

        function toggleSidebar() {
            sidebar.classList.toggle('open');
            overlay.classList.toggle('active');
            document.body.style.overflow = sidebar.classList.contains('open') ? 'hidden' : '';
        }

        if (closeBtn) {
            closeBtn.addEventListener('click', toggleSidebar);
        }

        if (overlay) {
            overlay.addEventListener('click', toggleSidebar);
        }

        // Resize handler
        window.addEventListener('resize', function () {
            if (window.innerWidth > 768) {
                sidebar.classList.remove('open');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }
        });
    });
</script>