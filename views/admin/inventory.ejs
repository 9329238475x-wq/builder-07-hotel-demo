<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Managing Inventory - Aura Admin</title>
    <link rel="stylesheet" href="/css/admin-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Custom styles for inventory specific elements */
        .inventory-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .inventory-card {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #E2E8F0;
            border-left: 4px solid transparent;
            transition: all 0.2s;
            position: relative;
        }

        .inventory-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .status-available {
            border-left-color: #10B981;
        }

        .status-occupied {
            border-left-color: #EF4444;
        }

        .status-maintenance {
            border-left-color: #F59E0B;
        }

        .status-cleaning {
            border-left-color: #3B82F6;
        }

        .status-badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .bg-available {
            background: #ECFDF5;
            color: #065F46;
            border: 1px solid #A7F3D0;
        }

        .bg-occupied {
            background: #FEF2F2;
            color: #991B1B;
            border: 1px solid #FECACA;
        }

        .bg-maintenance {
            background: #FFFBEB;
            color: #92400E;
            border: 1px solid #FDE68A;
        }

        .bg-cleaning {
            background: #EFF6FF;
            color: #1E40AF;
            border: 1px solid #BFDBFE;
        }

        .add-room-form {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #E2E8F0;
            display: flex;
            gap: 1.5rem;
            align-items: flex-end;
            flex-wrap: wrap;
        }
    </style>
</head>

<body>
    <!-- Global Matrix Background -->
    <canvas id="matrixCanvasGlobal"
        style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.15; pointer-events: none;"></canvas>
    <div class="admin-layout">
        <%- include('./partials/sidebar') %>
            <main class="main-content">
                <header class="top-bar">
                    <div class="page-title">Room Inventory</div>
                    <div class="top-actions">
                        <button class="btn-logout" onclick="window.location.href='/'">
                            <i class="fas fa-external-link-alt"></i> View Site
                        </button>
                        <div class="user-profile">
                            <div class="avatar">A</div>
                        </div>
                    </div>
                </header>

                <div class="dashboard-padding">
                    <!-- Add New Room -->
                    <div class="add-room-form">
                        <div style="flex: 1; min-width: 200px;">
                            <label
                                style="display: block; font-size: 0.85rem; font-weight: 500; color: #64748B; margin-bottom: 0.5rem;">Room
                                Number</label>
                            <input type="text" id="newRoomNumber" placeholder="e.g. 505"
                                style="width: 100%; padding: 0.6rem 1rem; border: 1px solid #CBD5E1; border-radius: 6px; font-size: 0.9rem; outline: none;">
                        </div>
                        <div style="flex: 1; min-width: 200px;">
                            <label
                                style="display: block; font-size: 0.85rem; font-weight: 500; color: #64748B; margin-bottom: 0.5rem;">Room
                                Type</label>
                            <select id="newRoomType"
                                style="width: 100%; padding: 0.6rem 1rem; border: 1px solid #CBD5E1; border-radius: 6px; font-size: 0.9rem; outline: none;">
                                <% roomTypes.forEach(type=> { %>
                                    <option value="<%= type.id %>">
                                        <%= type.name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div style="flex: 1; min-width: 200px;">
                            <label
                                style="display: block; font-size: 0.85rem; font-weight: 500; color: #64748B; margin-bottom: 0.5rem;">Initial
                                Status</label>
                            <select id="newRoomStatus"
                                style="width: 100%; padding: 0.6rem 1rem; border: 1px solid #CBD5E1; border-radius: 6px; font-size: 0.9rem; outline: none;">
                                <option value="Available">Available</option>
                                <option value="Maintenance">Maintenance</option>
                            </select>
                        </div>
                        <button onclick="addRoom()"
                            style="background: #0F172A; color: white; border: none; padding: 0.7rem 1.5rem; border-radius: 6px; cursor: pointer; font-weight: 500; transition: background 0.2s;">
                            <i class="fas fa-plus"></i> Add Room
                        </button>
                    </div>

                    <!-- Inventory List -->
                    <h2 style="margin-bottom: 1.5rem; font-size: 1.1rem; color: #334155;">Inventory Overview</h2>
                    <div class="inventory-grid">
                        <% roomInstances.sort((a,b)=> a.number.localeCompare(b.number)).forEach(room => {
                            let typeName = roomTypes.find(t => t.id == room.typeId)?.name || 'Unknown';
                            let statusClass = 'status-' + room.status.toLowerCase();
                            let bgClass = 'bg-' + room.status.toLowerCase();
                            %>
                            <div class="inventory-card <%= statusClass %>">
                                <div
                                    style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                                    <div>
                                        <h2 style="margin: 0; font-size: 1.5rem; color: #1E293B; font-weight: 700;">Room
                                            <%= room.number %>
                                        </h2>
                                        <p style="color: #64748B; font-size: 0.85rem; margin-top: 0.25rem;">
                                            <%= typeName %>
                                        </p>
                                    </div>
                                    <span class="status-badge <%= bgClass %>">
                                        <%= room.status %>
                                    </span>
                                </div>

                                <div style="margin-top: 1.5rem;">
                                    <label
                                        style="display: block; font-size: 0.75rem; font-weight: 600; color: #94A3B8; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.5rem;">Update
                                        Status</label>
                                    <select onchange="updateRoomStatus('<%= room.id %>', this.value)"
                                        style="width: 100%; padding: 0.5rem; border: 1px solid #CBD5E1; border-radius: 6px; font-size: 0.85rem; outline: none; background: white;">
                                        <option value="Available" <%=room.status==='Available' ? 'selected' : '' %>
                                            >Available</option>
                                        <option value="Occupied" <%=room.status==='Occupied' ? 'selected' : '' %>
                                            >Occupied</option>
                                        <option value="Cleaning" <%=room.status==='Cleaning' ? 'selected' : '' %>
                                            >Cleaning</option>
                                        <option value="Maintenance" <%=room.status==='Maintenance' ? 'selected' : '' %>
                                            >Maintenance</option>
                                    </select>
                                </div>

                                <button onclick="deleteRoom('<%= room.id %>')"
                                    style="margin-top: 1rem; width: 100%; padding: 0.5rem; background: transparent; border: 1px solid #FECACA; color: #EF4444; border-radius: 6px; cursor: pointer; font-size: 0.85rem; transition: all 0.2s; font-weight: 500;">
                                    Delete Room
                                </button>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </main>
    </div>

    <script>
        async function addRoom() {
            const number = document.getElementById('newRoomNumber').value;
            const typeId = document.getElementById('newRoomType').value;
            const status = document.getElementById('newRoomStatus').value;

            if (!number) return alert('Please enter room number');

            try {
                const res = await fetch('/api/inventory/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ number, typeId, status })
                });
                if (res.ok) location.reload();
                else alert('Failed to add room');
            } catch (e) { console.error(e); }
        }

        async function updateRoomStatus(id, status) {
            try {
                const res = await fetch('/api/inventory/status', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id, status })
                });
                if (res.ok) location.reload();
                else alert('Failed to update status');
            } catch (e) { console.error(e); }
        }

        async function deleteRoom(id) {
            if (!confirm('Delete this room permanently?')) return;
            try {
                const res = await fetch('/api/inventory/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id })
                });
                if (res.ok) location.reload();
                else alert('Failed to delete room');
            } catch (e) { console.error(e); }
        }
    </script>
    <script src="/js/animations.js"></script>
</body>

</html>