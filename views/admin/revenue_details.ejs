<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Revenue Details - <%= generalSettings.hotelName %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        gold: { 400: '#FACC15', 500: '#EAB308', 600: '#CA8A04' },
                        dark: { 800: '#1F2937', 900: '#111827' }
                    },
                    fontFamily: { sans: ['Inter', 'sans-serif'] }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-900 text-gray-100 font-sans antialiased overflow-y-auto">

    <div class="max-w-7xl mx-auto p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8 border-b border-gray-700 pb-4">
            <div class="flex items-center gap-4">
                <a href="/admin/settings" class="bg-gray-800 p-2 rounded-full hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left text-gold-500"></i>
                </a>
                <h1 class="text-3xl font-bold text-white">Revenue Details</h1>
            </div>
            <div class="text-right">
                <p class="text-sm text-gray-400">Total Revenue</p>
                <h2 class="text-4xl font-bold text-green-400">₹<%= revenue.toLocaleString() %>
                </h2>
            </div>
        </div>

        <!-- Monthly Breakdown -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <% Object.keys(monthlyRevenue).forEach(month=> { %>
                <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-lg">
                    <h3 class="text-gray-400 text-sm font-medium uppercase tracking-wider mb-2">
                        <%= month %>
                    </h3>
                    <p class="text-2xl font-bold text-white">₹<%= monthlyRevenue[month].toLocaleString() %>
                    </p>
                </div>
                <% }); %>
                    <% if(Object.keys(monthlyRevenue).length===0) { %>
                        <div class="col-span-3 text-center py-8 text-gray-500">No revenue data available yet.</div>
                        <% } %>
        </div>

        <!-- Confirmed Transactions Table -->
        <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
            <div class="p-6 border-b border-gray-700">
                <h3 class="text-xl font-bold text-white"><i class="fas fa-receipt text-gold-500 mr-2"></i> Transaction
                    History (Confirmed)</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-300">
                    <thead class="bg-gray-900 text-gray-400 uppercase text-xs">
                        <tr>
                            <th class="px-6 py-4">Booking ID</th>
                            <th class="px-6 py-4">Date</th>
                            <th class="px-6 py-4">Guest</th>
                            <th class="px-6 py-4">Room Type</th>
                            <th class="px-6 py-4 text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        <% bookings.forEach(b=> { %>
                            <tr class="hover:bg-gray-750">
                                <td class="px-6 py-4 font-mono text-xs text-gray-500">#<%= b.id %>
                                </td>
                                <td class="px-6 py-4 text-white">
                                    <%= b.checkIn %>
                                </td>
                                <td class="px-6 py-4 font-medium text-white">
                                    <%= b.name %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= b.roomType %>
                                </td>
                                <td class="px-6 py-4 text-right font-bold text-green-400">₹<%=
                                        b.totalPrice.toLocaleString() %>
                                </td>
                            </tr>
                            <% }); %>
                                <% if(bookings.length===0) { %>
                                    <tr>
                                        <td colspan="5" class="px-6 py-8 text-center text-gray-500">No confirmed
                                            transactions found.</td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>