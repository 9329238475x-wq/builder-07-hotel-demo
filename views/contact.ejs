<%- include('partials/header') %>

    <main>
        <!-- HERO -->
        <section class="relative h-[55vh] min-h-[420px] flex items-center justify-center bg-cover bg-center"
            style="background-image: url('<%= contactPageData.heroImage %>');">
            <div class="absolute inset-0 bg-black/60"></div>
            <div class="relative z-10 px-6 max-w-4xl mx-auto text-center">
                <p class="text-gold text-sm uppercase tracking-widest mb-4">
                    <%= generalSettings.hotelName %>
                </p>
                <h1 class="font-heading text-white text-4xl md:text-6xl font-bold">
                    <%= contactPageData.title %>
                </h1>
                <p class="mt-4 text-white/70 max-w-2xl mx-auto">
                    <%= contactPageData.subtitle %>
                </p>
            </div>
        </section>

        <!-- CONTACT -->
        <section class="py-16 md:py-20 px-6 bg-[#0b0b14]">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
                    <div class="rounded-2xl border border-white/10 bg-black/20 backdrop-blur p-8">
                        <h2 class="font-heading text-3xl text-white font-bold">Get in Touch</h2>
                        <p class="mt-3 text-white/70 text-sm">For bookings, airport pickup, or general queries.</p>

                        <div class="mt-8 space-y-4 text-white/70 text-sm">
                            <div><span class="text-white/90 font-semibold">Phone:</span> +91 98765 43210</div>
                            <div><span class="text-white/90 font-semibold">Email:</span> stay@theaurainn.com</div>
                            <div><span class="text-white/90 font-semibold">Address:</span> 123 Airport Road, Near
                                International Airport</div>
                        </div>

                        <form id="contactForm" class="mt-10 grid gap-4">
                            <input type="text" name="name" placeholder="Full Name" required
                                class="w-full rounded-lg border border-white/10 bg-black/20 px-4 py-3 text-sm text-white placeholder:text-white/30 focus:outline-none focus:ring-2 focus:ring-[#D4AF37]/40">
                            <input type="email" name="email" placeholder="Email" required
                                class="w-full rounded-lg border border-white/10 bg-black/20 px-4 py-3 text-sm text-white placeholder:text-white/30 focus:outline-none focus:ring-2 focus:ring-[#D4AF37]/40">
                            <textarea name="message" rows="5" placeholder="Message" required
                                class="w-full rounded-lg border border-white/10 bg-black/20 px-4 py-3 text-sm text-white placeholder:text-white/30 focus:outline-none focus:ring-2 focus:ring-[#D4AF37]/40"></textarea>
                            <button type="submit"
                                class="bg-gold text-midnight px-6 py-3 rounded-full font-bold uppercase tracking-wider text-xs transition-transform hover:scale-105">
                                Send Message
                            </button>
                        </form>
                    </div>

                    <div class="rounded-2xl overflow-hidden border border-white/10 bg-black/20">
                        <iframe title="Aura Inn Map" class="w-full h-[420px]"
                            src="https://www.google.com/maps?q=International%20Airport&output=embed"
                            loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </section>

    </main>




    <%- include('partials/footer') %>